{
  "manifest_version": 3,
  "name": "MyFormSnapper - Chrome AI",
  "description": "AI-powered form filler using Chrome's built-in Gemini Nano + Google Cloud",
  "version": "2.0",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_icon": {
      "16": "formSnapper.png",
      "48": "formSnapper.png",
      "128": "formSnapper.png"
    }
  },
  "icons": {
    "16": "formSnapper.png",
    "48": "formSnapper.png",
    "128": "formSnapper.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["form-detector.js", "content.js", "panel-injector.js"],
      "css": ["panel.css"]
    }
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "host_permissions": [
    "https://*.cloudfunctions.net/*",
    "https://*.googleapis.com/*",
    "https://www.gstatic.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["panel.html", "panel.css", "fuzzy-button-matcher.js", "hybrid-button-finder.js"],
      "matches": ["<all_urls>"]
    }
  ]
}